<%- include("../partials/header.ejs")-%>

<div class="container">
  <h3>Edit Task</h3>

<form action="/tasks/<%= task._id %>/edit" method="POST" class="form-center" >
  <div class="form-group w-25">
    <label for="title">Title</label>
    <input value="<%= task.title %>" name="title" type="text" class="form-control" required>
  </div>
  <div class="form-group w-25">
    <label for="description">Description</label>
    <input value="<%= task.description %>" name="description" type="text" class="form-control" >
  </div>

  <select name="complete" class="w-25 mb-3">
    <option value="false">False</option>
    <option value="true">True</option>
  </select>
  
  <button type="submit" class="btn btn-primary w-25">Create</button>
</form>
</div>