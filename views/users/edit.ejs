<%- include("../partials/header.ejs")-%>

<div class="container">
    <h3>Edit Users</h3>

  <form action="/users/<%= user._id %>/edit" method="POST" class="form-center" >
    <div class="form-group w-25">
      <label for="name">User Name</label>
      <input value="<%= user.name %>" name="name" type="text" class="form-control"   >
    </div>
    <div class="form-group w-25">
      <label for="email">Email</label>
      <input value="<%= user.email %>" name="email" type="email" class="form-control"  placeholder="email" >
    </div>
    <div class="form-group w-25">
      <label for="password">Password</label>
      <input value="<%= user.password %>" name="password" type="password" class="form-control"  >
    </div>
    
    <button type="submit" class="btn btn-primary w-25">Create</button>
  </form>
</div>